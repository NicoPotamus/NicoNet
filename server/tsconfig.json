{
  // "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "preserveConstEnums": true,
    "target": "es2022",
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["**/*.spec.ts", "node_modules", "dist"]
}